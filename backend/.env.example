# Archivo de ejemplo para variables de entorno
# Copia este archivo a .env y actualiza los valores según sea necesario

# Puerto en el que se ejecutará la API
PORT=8000

# Host en el que se ejecutará la API
HOST=0.0.0.0

# Modo de depuración (true/false)
DEBUG=True

# URL de la base de datos (si se implementa)
# DATABASE_URL=sqlite:///./cursos.db

# Clave secreta para tokens JWT (si se implementa autenticación)
# SECRET_KEY=your-secret-key-here

# Tiempo de expiración de tokens en minutos (si se implementa autenticación)
# ACCESS_TOKEN_EXPIRE_MINUTES=30